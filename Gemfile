# rake
gem 'rake'
# database
gem 'pg'
gem 'sequel'
gem 'sequel-seed'
# allows cross-origin resource sharing
gem 'rack-cors', :require => 'rack/cors'

# other useful gems
gem 'require_all'
gem 'shotgun'
gem 'pry'
